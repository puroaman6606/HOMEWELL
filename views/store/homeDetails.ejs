        </div>
    </section>

    <!-- CONTENT GRID -->
    <section class="max-w-6xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-3 gap-12">

        <!-- LEFT CONTENT -->
        <div class="lg:col-span-2 space-y-10">

            <!-- Dynamic Moving Text -->
            <div class="overflow-hidden">
                <p class="text-xl text-pink-400 font-semibold animate-pulse">
