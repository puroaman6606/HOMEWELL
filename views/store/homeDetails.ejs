<div class="bg-white text-gray-900 rounded-3xl shadow-2xl p-8 sticky top-28">

    <p class="text-3xl font-extrabold mb-2">
        ‚Çπ <%= home.rent %>
        <span class="text-lg font-normal text-gray-500">/ night</span>
    </p>

    <p class="text-gray-500 mb-6">
        Best price guaranteed
    </p>

    <!-- REAL BOOKING FORM -->
    <form action="/bookings" method="POST" class="space-y-5">

        <input type="hidden" name="homeId" value="<%= home._id %>">

        <!-- Dates -->
        <div class="border rounded-2xl overflow-hidden">
            <div class="grid grid-cols-2 border-b">
                <div class="p-4">
                    <label class="text-xs text-gray-500">CHECK-IN</label>
                    <input
                        type="date"
                        name="checkIn"
                        required
                        class="w-full outline-none font-medium mt-1"
                    />
                </div>

                <div class="p-4 border-l">
                    <label class="text-xs text-gray-500">CHECK-OUT</label>
                    <input
                        type="date"
                        name="checkOut"
                        required
                        class="w-full outline-none font-medium mt-1"
                    />
                </div>
            </div>

            <!-- Guests -->
            <div class="p-4">
                <label class="text-xs text-gray-500">GUESTS</label>
                <select
                    name="guests"
                    class="w-full font-medium outline-none mt-1">
                    <option value="1">1 guest</option>
                    <option value="2">2 guests</option>
                    <option value="3">3 guests</option>
                    <option value="4">4 guests</option>
                </select>
            </div>
        </div>

        <!-- CTA -->
        <button
            type="submit"
            class="w-full bg-pink-500 hover:bg-pink-600
                   text-white font-bold py-4 rounded-full text-lg transition shadow-lg">
            Reserve now
        </button>

