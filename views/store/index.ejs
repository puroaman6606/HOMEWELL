<%- include('../partials/head') %> 
</head>
<body class=" bg-white border-b border-gray-200 shadow-sm sticky">
<%- include('../partials/header') %>
<main class="pt-24 pb-20 bg-gray-50">

    <!-- HERO -->
    <section class="max-w-7xl mx-auto px-6 mb-20">
        <div class="rounded-3xl bg-gradient-to-br from-gray-900 via-gray-800 to-black p-14 shadow-xl">
            <h1 class="text-5xl font-bold text-white mb-6">
                Discover places you‚Äôll love to stay
            </h1>
            <p class="text-gray-300 text-lg max-w-2xl mb-10">
                Browse handpicked homes with comfort, style, and great locations.
            </p>

            <!-- Search UI (links only) -->
            <div class="bg-white rounded-full shadow-lg flex items-center gap-6 px-6 py-4 max-w-3xl">
                <a href="/homes" class="flex-1">
                    <p class="text-xs text-gray-500">Location</p>
                    <p class="font-medium text-gray-900">Anywhere</p>
                </a>
                <div class="h-8 w-px bg-gray-200 hidden sm:block"></div>
                <a href="/homes" class="flex-1">
                    <p class="text-xs text-gray-500">Type</p>
                    <p class="font-medium text-gray-900">Any stay</p>
                </a>
                <a href="/homes"
                   class="bg-pink-500 hover:bg-pink-600 transition text-white px-6 py-3 rounded-full font-semibold">
                    Explore
                </a>
            </div>
        </div>
    </section>

    <!-- CATEGORIES -->
    <section class="max-w-7xl mx-auto px-6 mb-16">
        <div class="flex gap-6 overflow-x-auto pb-2 text-sm font-medium">
            <a href="/homes" class="px-5 py-2 bg-white rounded-full shadow border">üè° Homes</a>
            <a href="/homes" class="px-5 py-2 bg-white rounded-full shadow border">üåä Beach</a>
            <a href="/homes" class="px-5 py-2 bg-white rounded-full shadow border">‚õ∞Ô∏è Nature</a>
            <a href="/homes" class="px-5 py-2 bg-white rounded-full shadow border">üèôÔ∏è City</a>
            <a href="/homes" class="px-5 py-2 bg-white rounded-full shadow border">üî• Trending</a>
        </div>
    </section>

    <!-- HOMES GRID -->
    <section class="max-w-7xl mx-auto px-6">
        <div class="flex justify-between items-center mb-10">
            <h2 class="text-3xl font-semibold text-gray-900">Available stays</h2>
            <a href="/homes" class="text-sm text-gray-500 hover:underline">
                View all
            </a>
        </div>

        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">

            <% if (registeredHomes.length === 0) { %>

                <li class="col-span-full text-center py-20 text-gray-400">
                    No homes available right now.
                </li>

            <% } %>

            <% registeredHomes.forEach((home, index) => { %>

                <li class="bg-white rounded-2xl shadow hover:shadow-xl transition overflow-hidden">
                    
                    <!-- IMAGE -->
                    <a href="/homes/<%= home._id %>">
                        <img 
                            src="<%= home.photoUrl || ('/images/home-' + ((index % 25) + 1) + '.jpg') %>"
                            alt="Home image"
                            class="h-64 w-full object-cover"
                        />
                    </a>

                    <!-- CONTENT -->
                    <div class="p-5">
                        <h3 class="text-lg font-semibold text-gray-900 truncate">
                            <%= home.houseName %>
                        </h3>

                        <p class="text-gray-500 text-sm mt-1">
                            <%= home.location %>
                        </p>

                        <div class="flex justify-between items-center mt-4">
                            <p class="font-semibold text-gray-900">
                                ‚Çπ <%= home.rent %> / night
                            </p>

                            <a href="/homes/<%= home._id %>"
                               class="text-sm text-pink-500 hover:underline font-medium">
                                View details
                            </a>
                        </div>
                    </div>
                </li>

            <% }) %>

        </ul>
    </section>

    <!-- FOOTER -->
    <footer class="mt-24 bg-white border-t">
        <div class="max-w-7xl mx-auto px-6 py-14 grid grid-cols-1 md:grid-cols-4 gap-10 text-sm text-gray-600">

            <div>
                <h4 class="font-semibold text-gray-900 mb-4">About</h4>
                <ul class="space-y-2">
                    <li><a href="/about" class="hover:underline">About Us</a></li>
                    <li><a href="/careers" class="hover:underline">Careers</a></li>
                    <li><a href="/contact" class="hover:underline">Contact</a></li>
                </ul>
            </div>

            <div>
                <h4 class="font-semibold text-gray-900 mb-4">Explore</h4>
                <ul class="space-y-2">
                    <li><a href="/homes" class="hover:underline">Homes</a></li>
                    <li><a href="/host/add-home" class="hover:underline">Become a Host</a></li>
                </ul>
            </div>

            <div>
                <h4 class="font-semibold text-gray-900 mb-4">Support</h4>
                <ul class="space-y-2">
                    <li><a href="/help" class="hover:underline">Help Center</a></li>
                    <li><a href="/policies" class="hover:underline">Policies</a></li>
                </ul>
            </div>

            <div class="text-gray-500">
                <p class="font-semibold text-gray-900 mb-2">Airbnb Clone</p>
                <p>Built with Node.js & Tailwind CSS</p>
                <p class="mt-2">¬© 2025 Aman Prajapati</p>
            </div>

        </div>
    </footer>

</main>



</body>
</html>
