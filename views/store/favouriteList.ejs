 <%- include('../partials/head') %> 
</head>
<body class=" bg-white border-b border-gray-200 shadow-sm sticky">

<%- include('../partials/header') %>     
<main class="pt-24 pb-24 bg-gradient-to-br from-gray-50 via-white to-pink-50">

    <!-- Header -->
    <section class="max-w-7xl mx-auto px-6 mb-16 text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            ❤️ Your Favourite Stays
        </h2>
        <p class="text-gray-500 text-lg">
            Homes you loved and saved for later
        </p>
    </section>

    <% if (favouriteHomes.length === 0) { %>
        <div class="max-w-3xl mx-auto bg-white/70 backdrop-blur border border-dashed border-gray-300 
                    rounded-3xl p-16 text-center shadow-sm">
            <p class="text-gray-500 text-lg">
                You haven’t saved any homes yet.
            </p>
            <a href="/homes"
               class="inline-block mt-6 px-8 py-3 rounded-full bg-pink-500 text-white 
                      font-medium hover:bg-pink-600 transition shadow-lg">
                Explore homes
            </a>
        </div>
    <% } %>

    <!-- Favourite Homes Grid -->
    <section class="max-w-7xl mx-auto px-6 mt-12">
        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">

            <% favouriteHomes.forEach((h) => { %>

                <li class="relative bg-white/80 backdrop-blur rounded-3xl shadow-lg 
                           hover:shadow-2xl transition overflow-hidden group">

                    <!-- Image (SMALL & CLEAN) -->
                    <div class="relative">
                        <img 
                            src="<%= h.photoUrl %>" 
                            alt="House Photo"
                            class="w-full h-36 object-cover"
                        />

                        <!-- Gradient Overlay -->
                        <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>

                        <!-- Remove Favourite (Floating) -->
                        <form action="/favourite-list/delete/<%= h._id %>" method="POST"
                              class="absolute top-3 right-3">
                            <button 
                                type="submit"
                                class="p-2 rounded-full bg-white/90 hover:bg-red-100 
                                       transition shadow"
                                aria-label="Remove from favourites"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500"
                                     viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 
                                             2 5.42 4.42 3 7.5 3 
                                             c1.74 0 3.41.81 4.5 2.09 
                                             C13.09 3.81 14.76 3 16.5 3 
                                             19.58 3 22 5.42 22 8.5 
                                             c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                                </svg>
                            </button>
                        </form>
                    </div>

                    <!-- Content -->
                    <div class="p-6 text-left">
                        <h3 class="text-lg font-semibold text-gray-900 truncate">
                            <%= h.houseName %>
                        </h3>

                        <p class="text-sm text-gray-500 mt-1">
                            <%= h.location %>
                        </p>

                        <div class="flex justify-between items-center mt-4">
                            <p class="font-semibold text-gray-900">
                                ₹ <%= h.rent %>
                                <span class="text-sm font-normal text-gray-500">/ night</span>
                            </p>

                            <a href="/homes/<%= h._id %>"
                               class="text-sm font-medium text-pink-500 hover:underline">
                                View details
                            </a>
                        </div>
                    </div>

                </li>

            <% }) %>

        </ul>
    </section>

</main>


</body>
</html>