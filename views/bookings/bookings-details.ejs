<%- include('../partials/head') %>
</head>

<body class="bg-gray-50 min-h-screen">
<%- include('../partials/header') %>

<main class="max-w-6xl mx-auto px-6 py-12">

  <!-- Page Title -->
  <div class="mb-10">
    <h1 class="text-4xl font-extrabold text-gray-900">
      Booking Details
    </h1>
    <p class="text-gray-500 mt-2">
      Review your reservation and complete payment
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">

    <!-- LEFT: Home + Booking Info -->
    <div class="lg:col-span-2 space-y-8">

      <!-- Home Card -->
      <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
        <img
          src="/<%= booking.home.photoUrl %>"
          alt="Home photo"
          class="w-full h-72 object-cover"
        />

        <div class="p-6">
          <h2 class="text-2xl font-bold text-gray-900">
            <%= booking.home.houseName %>
          </h2>

          <p class="text-gray-600 mt-1">
            üìç <%= booking.home.location %>
          </p>
        </div>
      </div>

      <!-- Booking Info -->
      <div class="bg-white rounded-3xl shadow-lg p-8">
        <h3 class="text-xl font-bold mb-6">
          Your Trip
        </h3>

        <div class="grid grid-cols-2 gap-6">
          <div>
            <p class="text-gray-500 text-sm">Check-in</p>
            <p class="font-semibold">
              <%= booking.checkIn.toDateString() %>
            </p>
          </div>

          <div>
            <p class="text-gray-500 text-sm">Check-out</p>
            <p class="font-semibold">
              <%= booking.checkOut.toDateString() %>
            </p>
          </div>

          <div>
            <p class="text-gray-500 text-sm">Guests</p>
            <p class="font-semibold">
              <%= booking.guests %>
            </p>
          </div>

          <div>
            <p class="text-gray-500 text-sm">Status</p>
            <span class="inline-block px-4 py-1 rounded-full text-sm font-semibold
              <%= booking.status === 'paid'
                ? 'bg-green-100 text-green-700'
                : 'bg-yellow-100 text-yellow-700' %>">
              <%= booking.status.toUpperCase() %>
            </span>
          </div>
        </div>
      </div>

    </div>

    <!-- RIGHT: Price Card -->
    <div class="bg-white rounded-3xl shadow-2xl p-8 h-fit sticky top-28">

      <h3 class="text-xl font-bold mb-6">
        Price Details
      </h3>

      <div class="space-y-4 text-gray-700">

        <div class="flex justify-between">
          <span>‚Çπ <%= booking.home.rent %> √ó night(s)</span>
          <span>‚Çπ <%= booking.totalPrice %></span>
        </div>

        <div class="flex justify-between">
          <span>Service fee</span>
          <span>‚Çπ 0</span>
        </div>

        <hr>

        <div class="flex justify-between font-bold text-lg">
          <span>Total</span>
          <span>‚Çπ <%= booking.totalPrice %></span>
        </div>
      </div>

      <!-- CTA -->
     <% if (booking.status !== 'cancelled') { %>

  <% if (booking.status === 'pending') { %>
    <a
      href="/payments/<%= booking._id %>"
      class="block text-center mt-6 bg-pink-500 hover:bg-pink-600
             text-white font-bold py-4 rounded-full transition">
      Proceed to Pay
    </a>
  <% } %>

  <!-- CANCEL BUTTON -->
  <form
    action="/bookings/<%= booking._id %>/cancel"
    method="POST"
    class="mt-4"
    onsubmit="return confirm('Are you sure you want to cancel this booking?')"
  >
    <button
      type="submit"
      class="w-full border border-red-500 text-red-600
             hover:bg-red-50 font-semibold py-3 rounded-full transition">
      Cancel Booking
    </button>
  </form>

<% } else { %>

  <div class="mt-8 text-center text-red-600 font-semibold">
    ‚ùå Booking Cancelled
  </div>

<% } %>

    </div>

  </div>

</main>
</body>
</html>
