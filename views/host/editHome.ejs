    <%- include('../partials/head', {PageTitle: 'Add Your Home'}) %>
</head>
<body>
    <%- include('../partials/header') %>
   

    <!-- Main Content -->
    <main class="mt-10 flex flex-col items-center justify-center text-center">
         <h1 class="text-3xl font-bold text-green-700 mb-6"><%= editing ? 'Edit Home' : 'Register'%>
            Your Home
         </h1>
    
        <form 
            action="/host/<%=editing ? "editHome" :"add-home" %>" 
            method="POST" enctype="multipart/form-data" 
            class="bg-white p-8 rounded-xl shadow-lg w-full max-w-md space-y-6"
        >
        <input type="hidden" name="_id" value="<%= editing ? homefound._id : "" %>"/>
            <!-- House Name -->
            <div>
                <label class="block text-gray-700 font-medium mb-1">House Name</label>
                <input 
                    type="text" 
                    name="houseName" 
                    value="<%= editing ? homefound.houseName : " " %>"
                    placeholder="Enter house name"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:border-red-400 outline-none"
                    required
                />
            </div>

            <!-- Rent -->
            <div>
                <label class="block text-gray-700 font-medium mb-1">Rent Amount</label>
                <input 
                    type="number" 
                    name="rent" 
                     value="<%= editing ? homefound.rent : " " %>"
                    placeholder="Enter rent"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:border-red-400 outline-none"
                    required
                />
            </div>
             <div>
                <label class="block text-gray-700 font-medium mb-1">Location</label>
                <input 
                    type="text" 
                    name="location" 
                     value="<%= editing ? homefound.location : " " %>"
                    placeholder="Enter location"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:border-red-400 outline-none"
                    required
                />
            </div>
             <div>
                <label class="block text-gray-700 font-medium mb-1">photo</label>
                <input 
                    type="file" 
                    name="photoUrl" 
                    accept="image/*"
                    multiple
                     value="<%= editing ? homefound.photoUrl : " " %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:border-red-400 outline-none"
                    required
                />
            </div>

            <!-- Submit Button -->
            <button 
                type="submit"
                value="Add Home"
                class="w-full py-3 bg-red-500 text-white rounded-lg text-lg font-semibold shadow-md hover:bg-red-600 transition-all"
            > <%= editing ? "Update Home" : "Add Home" %>
                <!-- âž• Add Home -->
            </button>
        </form>
      
    </main>

</body>
</html>
