<%- include('../partials/head')%> 
</head>
<body class="bg-slate-50 font-sans antialiased text-slate-900">

<%- include('../partials/header') %>    

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

    <% if (registeredHomes.length === 0) { %>
        <div class="text-center py-20 bg-white rounded-3xl shadow-sm border border-slate-100 mb-10">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-indigo-50 text-indigo-600 rounded-full mb-6 animate-bounce">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
            </div>
            <h2 class="text-4xl font-extrabold tracking-tight text-slate-900 mb-4">
                Ready to become a Superhost?
            </h2>
            <p class="text-slate-500 text-lg max-w-md mx-auto mb-8">
                Your portfolio is currently empty. List your first property today and start reaching thousands of guests.
            </p>
            <a href="/host/add-home" class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-bold rounded-2xl shadow-lg text-white bg-indigo-600 hover:bg-indigo-700 hover:-translate-y-1 transition-all">
                + Create Your First Listing
            </a>
        </div>
    <% } else { %>
        <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-12 border-b border-slate-200 pb-8">
            <div>
                <h2 class="text-4xl font-extrabold text-slate-900 tracking-tight">
                    <% if (registeredHomes.length === 1) { %>
                        Your Property Dashboard
                    <% } else if (registeredHomes.length < 5) { %>
                        Growing your portfolio! üöÄ
                    <% } else { %>
                        Your Empire of Homes üè∞
                    <% } %>
                </h2>
                <p class="text-slate-500 mt-2 text-lg">
                    <% if (registeredHomes.length === 1) { %>
                        Managing 1 active listing.
                    <% } else { %>
                        You are currently managing <strong><%= registeredHomes.length %></strong> beautiful properties.
                    <% } %>
                </p>
            </div>
            <div class="mt-6 md:mt-0 flex gap-3">
                <a href="/host/add-home" class="px-5 py-2.5 bg-white border border-slate-200 rounded-xl font-semibold shadow-sm hover:bg-slate-50 transition-all text-sm">
                    + Add New
                </a>
            </div>
        </div>
    <% } %>

    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
    <% if (registeredHomes.length === 0) { %>
        <li class="col-span-full py-12 text-center border-2 border-dashed border-slate-200 rounded-3xl">
            <p class="text-slate-400 font-medium">Waiting for your first listing to appear here...</p>
        </li>
    <% } else { %>
        <% registeredHomes.forEach((h, index) => { %>
            <li class="group bg-white rounded-3xl shadow-sm hover:shadow-2xl transition-all duration-500 flex flex-col overflow-hidden border border-slate-100 relative">
                
                <% if (index === 0) { %>
                    <div class="absolute top-4 left-4 z-10">
                        <span class="bg-green-500 text-white text-[10px] font-black uppercase tracking-widest px-2.5 py-1 rounded-full shadow-lg">
                            Latest Listing
                        </span>
                    </div>
                <% } %>

                <div class="relative overflow-hidden aspect-[4/3]">
                    <img 
                        src="/<%= h.photoUrl %>" 
                        alt="<%= h.houseName %>" 
                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                    />
                    <div class="absolute bottom-4 left-4">
                        <span class="bg-black/60 backdrop-blur-md text-white px-3 py-1 rounded-lg text-sm font-semibold">
                            $<%= h.rent %> <span class="text-slate-300 font-normal">/mo</span>
                        </span>
                    </div>
                </div>

                <div class="p-6">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-bold text-slate-900 group-hover:text-indigo-600 transition-colors">
                            <%= h.houseName %>
                        </h3>
                    </div>
                    
                    <div class="space-y-2 mb-6">
                        <p class="flex items-center text-slate-500 text-sm">
                            <span class="mr-2">üìç</span> <%= h.location %>
                        </p>
                        <p class="text-xs text-slate-400 uppercase tracking-widest font-bold">
                            Active Listing
                        </p>
                    </div>

                    <div class="grid grid-cols-2 gap-3">
                        <a href="/host/editHome/<%=h._id%>?editing=true" 
                           class="flex items-center justify-center bg-slate-50 text-slate-700 py-3 rounded-2xl font-bold text-sm hover:bg-indigo-50 hover:text-indigo-600 transition-all border border-transparent hover:border-indigo-100">
                            Edit Details
                        </a>
                        <form action="/host/deleteHome/<%= h._id%>" method="POST" class="w-full">
                            <button type="submit" 
                                    onclick="return confirm('Wait! Are you sure you want to remove this property?')"
                                    class="w-full flex items-center justify-center bg-white text-red-400 py-3 rounded-2xl font-bold text-sm hover:bg-red-50 hover:text-red-600 transition-all border border-red-50">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </li>
        <% }) %>
    <% } %>
    </ul>
</main>

</body>
</html>