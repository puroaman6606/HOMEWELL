 <form action="/favourite-list" method="POST" class="inline">
    <input type="hidden" name="homeId" value="<%= home._id %>">

    <button 
        type="submit"
        class="p-2 rounded-full bg-white shadow-md hover:shadow-lg
               hover:bg-pink-50 transition group"
        aria-label="Add to favourites"
    >
        <svg 
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-gray-500 group-hover:text-pink-500 transition"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
        >
            <path 
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z" 
            />
        </svg>
    </button>
</form>
