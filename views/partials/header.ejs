<header class="w-full bg-white border-b border-gray-200 shadow-sm sticky top-0 z-40">
  <div class="max-w-8xl mx-auto py-3 px-6 flex items-center justify-between">

   <a href="/" class="flex items-center gap-2 cursor-pointer">
  <svg class="h-8 w-8 text-rose-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
    <polyline points="9 22 9 12 15 12 15 22"></polyline>
  </svg>
  <h1 class="text-xl font-bold text-rose-600 tracking-tight hidden sm:block">HOMEWELL</h1>
</a>
<div class="grow flex justify-center mx-4">
      <form action="/homes" method="GET" class="flex items-center border border-gray-300 rounded-full shadow-md hover:shadow-lg transition duration-200 overflow-hidden">
        
        <div class="relative group border-r border-gray-300">
           <input 
             type="text" 
             name="location" 
             placeholder="Anywhere" 
             class="appearance-none bg-transparent border-none py-3 px-4 text-sm font-medium text-gray-700 placeholder-gray-900 focus:outline-none focus:bg-gray-100 w-32 sm:w-40 transition-colors cursor-pointer"
           >
        </div>

        <div class="relative group border-r border-gray-300 hidden sm:block">
           <input 
             type="text" 
             name="date" 
             placeholder="Any Week" 
             onfocus="(this.type='date')"
             onblur="(this.type='text')"
             class="appearance-none bg-transparent border-none py-3 px-4 text-sm font-medium text-gray-700 placeholder-gray-900 focus:outline-none focus:bg-gray-100 w-32 transition-colors cursor-pointer"
           >
        </div>

        <div class="relative group flex items-center pl-4 pr-2 hover:bg-gray-100 transition-colors">
            <input 
              type="number" 
              name="guests" 
              placeholder="Add Guests" 
              min="1"
              class="appearance-none bg-transparent border-none py-3 text-sm font-medium text-gray-700 placeholder-gray-500 focus:outline-none w-24 cursor-pointer bg-none"
            >
            
            <button type="submit" class="p-2 bg-rose-500 text-white rounded-full hover:bg-rose-600 transition ml-2">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>
        </div>

      </form>
    </div>

    <nav class="flex items-center gap-2">
      <% if(isLoggedIn) { %>
         <% if(user && user.role === 'guest') { %>
          <a href="/host"
        class="hidden lg:block px-3 py-2 text-sm font-medium text-gray-700 rounded-full hover:bg-gray-100 transition duration-150">
        Become a Host
      </a>
         <a href="/homes"
        class="p-2 text-gray-600 rounded-full hover:bg-gray-100 transition duration-150"
        title="Browse Homes">
        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
        </svg>
      </a>
        <a href="/favourite-list"
          class="p-2 text-gray-600 rounded-full hover:bg-gray-100 transition duration-150"
          title="Favourites">
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
          </svg>
        </a>

        <a href="/bookings"
          class="p-2 text-gray-600 rounded-full hover:bg-gray-100 transition duration-150"
          title="Bookings">
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
        </a>
        <% } else  {%>
          
        <a href="/host/host-homes"
          class="p-2 text-gray-600 rounded-full hover:bg-gray-100 transition duration-150"
          title="Your Listings">
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
        </a>

        <a href="/host/add-home"
          class="p-2 text-gray-600 rounded-full hover:bg-gray-100 transition duration-150"
          title="List a New Home">
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
        </a>
       <% } %>
        <a href="/logout" 
          class="flex items-center p-2 border border-gray-300 rounded-full shadow-sm hover:shadow-md transition duration-200 ml-2 group"
          title="Logout">
          <svg class="h-5 w-5 text-gray-500 mr-2 group-hover:text-rose-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
            <polyline points="10 17 15 12 10 7"></polyline>
            <line x1="15" y1="12" x2="3" y2="12"></line>
          </svg>
          <span class="text-sm font-medium text-gray-700">Logout</span>
        </a>


      <% } else  { %>

        <a href="/login"
          class="px-4 py-2 text-sm font-medium text-gray-700 rounded-full hover:bg-gray-100 transition duration-150">
          Log in
        </a>

        <a href="/signup"
          class="px-4 py-2 text-sm font-medium text-white bg-rose-500 rounded-full hover:bg-rose-600 transition duration-150">
          Sign up
        </a>

      <% } %>
    </nav>

  </div>
</header>